<div class="container m-5">
  <% @users.each do |user| %>
    <%= link_to(user) do %>
      <div class="row m-3">
        <div class="col-3 border p-2"> 
          <img src="<%= user.photo %>" class="img-thumbnail" alt="profile photo" />
        </div>
        <div class="col-8 offset-1 border p-2">
          <h2> <%= user.name %> </h2>
          <h6 class="d-flex justify-content-end"> Number of posts: <%= user.posts_counter || 0 %>  </h6>
        </div>
      </div>
    <% end %>
  <% end %>
</div>