<div class="m-5"> 
  <div class="border p-2">
    <h3> <%=@post.title%> </h3> 
    <h6 class="d-flex justify-content-end"> Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter%> </h6>
    <p class="mt-3"> <%=@post.text%> </p>
  </div>

  <div class="border p-2">
    <% @post.comments.each do |comment| %>
      <div>
        <h4> <%= comment.author.name %>: <%= comment.text %> </h4>
      </div>
    <% end %>
  </div>
  <%= form_with url: "/users/#{@post.author_id}/posts/#{@post.id}/likes", scope: :like do |form| %> 
    <%= form.submit "Like" %> 
  <% end %> 
  <%= render partial: "add_comment", local: { post: @post } %> 
</div>

